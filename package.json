{
  "name": "jobsro",
  "version": "1.0.0",
  "description": "National Jobs Portal with AI-powered matching and video interviews",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && nodemon index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && node index.js",
    "test": "npm run test:server && npm run test:client",
    "test:server": "jest --config jest.config.js",
    "test:client": "cd client && npm test",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "db:setup": "node scripts/setupDatabase.js",
    "db:migrate": "node scripts/runMigrations.js",
    "db:seed": "node scripts/seedDatabase.js",
    "db:reset": "npm run db:setup && npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "jobs",
    "portal",
    "recruitment",
    "ai-matching",
    "video-interviews"
  ],
  "author": "JobsRo Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "cypress": "^12.17.1",
    "nodemon": "^3.0.1",
    "eslint": "^8.43.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-jest": "^27.2.2",
    "@types/jest": "^29.5.2",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.7",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "joi": "^17.9.2",
    "pg": "^8.11.1",
    "pg-pool": "^3.6.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.3",
    "twilio": "^4.13.0",
    "razorpay": "^2.8.6",
    "openai": "^3.3.0",
    "axios": "^1.4.0",
    "winston": "^3.9.0",
    "dotenv": "^16.3.1",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.5.1",
    "cron": "^2.3.1",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  }
}